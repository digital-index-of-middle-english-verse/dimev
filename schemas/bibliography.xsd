<?xml version="1.0"?>
<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema">
  <xs:import namespace="http://www.w3.org/XML/1998/namespace"/>
  <xs:element name="bibliography">
    <xs:complexType>
      <xs:sequence>
        <xs:element name="bibl" maxOccurs="unbounded">
          <xs:complexType>
            <xs:sequence>
	      <xs:element name="authorstmt">
		<xs:complexType>
		  <xs:choice minOccurs="0" maxOccurs="unbounded">
		    <xs:element name="author" type="person"/>
		    <xs:element name="editor" type="person"/>
		  </xs:choice>
		</xs:complexType>
	      </xs:element>
	      <xs:element name="titlestmt">
		<xs:complexType>
		  <xs:choice maxOccurs="3">
		    <xs:element name="title" type="title-parent"/>
		    <xs:element name="vols" type="xs:string"/>
		  </xs:choice>
		</xs:complexType>
	      </xs:element>
	      <xs:element name="pubstmt">
		<xs:complexType mixed="true">
                  <xs:choice minOccurs="0">
		    <xs:element name="title" type="inset-title"/>
                  </xs:choice>
                  <xs:attribute name="date" type="xs:string"/>
		</xs:complexType>
	      </xs:element>
	      <xs:element name="index">
		<xs:complexType>
		  <xs:sequence>
		    <xs:element name="topic" type="xs:string"/>
		    <xs:element name="person" type="xs:string"/>
		  </xs:sequence>
		</xs:complexType>
	      </xs:element>
            </xs:sequence>
            <xs:attribute ref="xml:id" use="required"/>
	  </xs:complexType>
        </xs:element>
      </xs:sequence>
    </xs:complexType>
  </xs:element>
  <xs:complexType name="person">
    <xs:sequence>
      <xs:element name="last" type="xs:string"/>
      <xs:element name="first" type="xs:string"/>
      <xs:element name="suffix" type="xs:string" minOccurs="0"/>
    </xs:sequence>
  </xs:complexType>
  <xs:complexType name="title-parent" mixed="true">
    <xs:choice minOccurs="0">
      <xs:element name="title" type="inset-title"/>
    </xs:choice>
    <xs:attribute name="level" type="xs:string" use="required"/>
  </xs:complexType>
  <xs:complexType name="inset-title">
    <xs:simpleContent>
      <xs:extension base="xs:string">
        <xs:attribute name="level" type="xs:string" use="required"/>
      </xs:extension>
    </xs:simpleContent>
  </xs:complexType>
</xs:schema>
